<Div class="sign-up-container">
	<div class='container'>
		<div class='row flush'>
			<div class='col-lg-offset-4 col-lg-4 col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8'>
				<div class='row flush'>
					<div class='col-lg-12'>
						<div style="margin-top: 60px"><h1 class='page-header text-center'>Sign In</h1></div>	
					</div>

					<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  
  					<div><%= f.label :email %>
  					<%= f.email_field :email, :autofocus => true, class: "form-control" %></div>

  					<div><%= f.label :password %>
  					<%= f.password_field :password, class: "form-control" %></div>

  					<div style="padding: 5px"><%= link_to "Forgot your password?", new_password_path(resource_name) %></div>

  					<% if devise_mapping.rememberable? -%>
    				<div style= "padding: 5px"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  					
  					<% end -%>		

 					 <%= f.submit "Sign in", class: "btn btn-success btn-block" %>

					<div style="text-align:center; padding: 15px; margin-bottom: 175px"><%= link_to "Sign up", new_registration_path(resource_name) %></div>

					<% end %>

				</div>
			</div>
		</div>	
	</div>
</div>